<?xml version="1.0" encoding="utf-8"?> 
<wsdl:definitions name="SpellDefinition"
targetNamespace="http://per.dk/definitions"
xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
xmlns:types="http://per.dk/schema"
xmlns:tns="http://per.dk/definitions">

  <wsdl:types>
    <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:import namespace="http://per.dk/schema"
                 schemaLocation="spellService.xsd"/>
    </xs:schema>  
  </wsdl:types>
  
  <wsdl:message name="RequestSpellCheck">
    <wsdl:part name="input" element="types:SpellRequest"/>
  </wsdl:message>
  
  <wsdl:message name="ResponseSpellCheck">
    <wsdl:part name="output" element="types:SpellResponse"/>
  </wsdl:message>
  
  <wsdl:portType name="SpellPortType">
    <wsdl:operation name="SpellCheck">
      <wsdl:input message="RequestSpellCheck"/>
      <wsdl:output message="ResponseSpellCheck"/>
    </wsdl:operation>
  </wsdl:portType>

  <wsdl:binding name="SpellBinding" type="tns:SpellPortType">
    <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <wsdl:operation name="SpellCheck">
      <soap:operation soapAction="SpellCheck" />
      <wsdl:input>
        <soap:body use="literal"/>
      </wsdl:input>
    </wsdl:operation>
  </wsdl:binding> 
  
 <wsdl:service name="SpellService">
        <wsdl:port name="SpellPort" binding="tns:SpellBinding">
            <soap:address location="http://vision.dbc.dk/~pjo/webservices/spellcheck/server.php"/>
        </wsdl:port>
    </wsdl:service>


</wsdl:definitions>
